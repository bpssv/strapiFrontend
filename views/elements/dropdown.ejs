<li class="nav-item">
    <div class="dropdown">
        <a class="dropbtn dropdown-item">
            <%= menu.menu_item %>
        </a>
        <div class="dropdown-content p-5">
            <div class="row">
                <div class="col">

                    <% if (Array.isArray(menu.menu_hover_image) && menu.menu_hover_image[0] && menu.menu_hover_image[0].formats.medium) { %>
                        <img width="300" src="http://localhost:1337<%= menu.menu_hover_image[0].formats.medium.url %>" alt="">
                        <% } else if(Array.isArray(menu.menu_hover_image) && menu.menu_hover_image[0] && menu.menu_hover_image[0].formats.small) {%>
                            <img width="300" src="http://localhost:1337<%= menu.menu_hover_image[0].formats.small.url %>" alt="">
                            <% }  else {%>

                                <img width="300" src="" alt="Image Not Available">
                                <% } %>

                </div>
                <div class="col">

                    <p>
                        <%= menu.menu_hover_description %>

                    </p>

                </div>
                <div class="col">
                    <ul class="list-group list-group-flush">
                        <% menu.Submenu.forEach(function(item){ %>
                            <li class="list-group-item">
                                <a href="<%= item.menu_link %>">
                                    <%= item.sub_menu_item %>
                                </a>
                            </li>


                            <% }); %>


                    </ul>
                </div>
            </div>


        </div>
    </div>

</li>